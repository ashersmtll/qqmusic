.confirm{
	position: fixed;
	left 0;
	right 0;
	top 0;
	bottom 0;
	z-index 998;
	background-color $color-background-d;
	&.confirm-fade-enter-active{
		animation confirm-fadein 0.3s;
		.confirm-content{
			animation confirm-zoom 0.3s;
		}
	}
	.confirm-wrapper{
		position absolute;
		top 50%;
		left 50%;
		transform translate(-50%, -50%);
		z-index: 999;
		.confirm-content{
			width 5.4rem;
			border-radius .04rem;
			background $c333;
			.text{
				padding .4rem .3rem;
				line-height .4rem;
				text-align center;
				font-size $font16;
				color: $color-text-l;
			}
			.operate{
				text-align: center;
				font-size: $font16;
				.operate-btn{
					flex 1;
					line-height .4rem;
					padding .2rem 0;
					border-top .02rem solid $cffcd32;
					color $color-text-d;
					&.left{
						border-right .01rem solid $c666;
					}
				}
			}
		}
	}
}
@keyframes confirm-fadein{
	0%{
		opacity: 0;
	}
	100%{
		opacity: 1;
	}
}
@keyframes confirm-zoom{
	0%{
		transform: scale(0);
	}
	50%{
		transform: scale(1.1);
	}
	100%{
		transform: scale(1);
	}
}