$bg-image($url) {
	background-image: url($url@2x.png);
	@media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3) {
		background-image: url($url@3x.png);
	}
}
$no-wrap() {
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
$public-title() {
	flex 1;
	height .68rem;
	font-size $font16;
	color $cffcd32;
	margin-bottom .2rem;
	.title {
		padding 0 .2rem;
	}
	&:before, &:after {
		content " ";
		flex 1;
		border-top 2px solid $cffcd32;
		margin 0 .4rem;
	}
}
$detail-page() {
	position fixed;
	left 0;
	top 0;
	width 100%;
	height 100%;
	background $root-background;
}